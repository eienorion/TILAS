<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/btnBackSignup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/backbutton"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginStart="17dp" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Password "
            android:fontFamily="@font/monumentextendedultrabold"
            android:textColor="@color/black"
            android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@id/btnBackSignup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="17dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fontFamily="@font/interregular"
            android:paddingHorizontal="16dp"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="24dp" />


        <ImageView
            android:id="@+id/ivTogglePassword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_eye_closed"
            android:contentDescription="Toggle Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/etPassword" />

        <TextView
            android:id="@+id/tvMinLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimal 8 karakter"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="@id/etPassword"
            android:layout_marginTop="12dp" />


        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengandung angka"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_close"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMinLength"
            app:layout_constraintStart_toStartOf="@id/etPassword"
            android:layout_marginTop="4dp" />


        <TextView
            android:id="@+id/tvUppercase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengandung huruf besar"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_close"
             android:drawablePadding="8dp"
             app:layout_constraintTop_toBottomOf="@id/tvNumber"
            app:layout_constraintStart_toStartOf="@id/etPassword"
            android:layout_marginTop="4dp" />



        <com.google.android.material.button.MaterialButton
            android:layout_width="361dp"
            android:layout_height="48dp"
            android:id="@+id/btnSignup3"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="54dp"
            android:text="Continue"
            android:textColor="@color/greySignup"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/monumentextendedultrabold"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>