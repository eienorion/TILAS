<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthButtonStyle">
        <item name="android:layout_width">319dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/interregular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="BrandChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">8dp</item>
    </style>


    <style name="TrendingChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">#FF000000</item>
        <item name="chipStrokeWidth">0.7dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="chipIcon">@drawable/trending_up</item>
        <item name="chipIconTint">#FF000000</item>
        <item name="chipIconSize">16dp</item>
        <item name="chipIconVisible">true</item>
    </style>



</resources>